<h1>Customize a Race</h1>

<%= form_for @race, url: race_index_path, html: {method: :post} do |f|%>
    <p>
      <label for = 'race_name'>Race Name</label>
      <%= f.text_field 'name', autofocus: true %>
    </p>
    <p>
      <label for = 'race_description'>Description</label>
      <%= f.text_area 'description' %>
    </p>
    <%= f.hidden_field 'campaign_id', value: @current_campaign.id %>
    <%= f.submit 'Create Race' %>
<% end %>
