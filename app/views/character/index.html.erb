<% if @characters.blank? %>
  <p>There are not any characters currently in the system.</p>
<% else %>
  <p>These are the current characters in our system:</p>

  <ul id="characters">
    <% @characters.each do |c| %>
      <li>
        <%= link_to c.name, {action: 'show', id: c.id} %>
        <b>
          <%= link_to 'Edit', {action: 'edit', id: c.id} %>
        </b>
        <b>
          <%= link_to 'Delete', c, method: :delete,
                      confirm: 'Are you sure you want to delete this character?' %>
        </b>
      </li>
    <% end %>
  </ul>

<% end %>
<p><%= link_to 'Add new Character', {action: 'new'} %></p>
