<h1><%= @character.name %></h1>

<div class="col-xs-4">
  <p>
    <strong>Race:</strong> <%= @character.race.name %>
    <br>
    <strong>Class:</strong> <%= @character.category.name %>
    <br>
    <strong>Alignment:</strong> <%= @character.alignment1.humanize %> <%= @character.alignment2.humanize %>
    <br>
    <strong>HP:</strong> <%= @character.cur_hp %> / <%= @character.max_hp %>
    <br>
    <strong>Attribute Rolls</strong>:
    <br>
    <div class="col-xs-6">Strength:</div>
    <div class="col-xs-6"><%= @character.str_level %></div>
    <br>
    <div class="col-xs-6">Dexterity:</div>
    <div class="col-xs-6"><%= @character.dex_level %></div>
    <br>
    <div class="col-xs-6">Constitution:</div>
    <div class="col-xs-6"><%= @character.con_level %></div>
    <br>
    <div class="col-xs-6">Perception:</div>
    <div class="col-xs-6"><%= @character.per_level %></div>
    <br>
    <div class="col-xs-6">Intelligence:</div>
    <div class="col-xs-6"><%= @character.int_level %></div>
    <br>
    <div class="col-xs-6">Wisdom:</div>
    <div class="col-xs-6"><%= @character.wis_level %></div>
    <br>
    <div class="col-xs-6">Charisma:</div>
    <div class="col-xs-6"><%= @character.chr_level %></div>
    <br>
    <div class="col-xs-6">Stealth:</div>
    <div class="col-xs-6"><%= @character.stl_level %></div>
  </p>
</div>
