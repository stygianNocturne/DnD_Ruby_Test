<h1>Edit Character</h1>

<%= form_for @character, url: {action: 'update', id: @character} do |f| %>

    <p>
      <label for = 'character_name'>Name</label>:
      <%= f.text_field 'name', autofocus: true %>
    </p>

    <p>
      <label for = 'character_alignment'>Alignment</label>:
      <%= f.select 'alignment1', options_for_select([['Lawful', 'lawful'],
                                                                ['Neutral', 'neutral'],
                                                                ['Chaotic', 'chaotic']], 'neutral') %>
      <%= f.select 'alignment2', options_for_select([['Good', 'good'],
                                                                ['Neutral', 'neutral'],
                                                                ['Evil', 'evil']], 'neutral') %>
    </p>

    <p>
      <label for = 'character_race'>Race</label>:
      <%= f.select 'race_id', options_for_select(@races.collect{|r| [r.name, r.id]}) %>
    </p>

    <p>
      <label for = 'character_category'>Class</label>:
      <%= f.select 'category_id', options_for_select(@categories.collect{|r| [r.name, r.id]}) %>
    </p>

    <p>
      <label for = 'character_maxHP'>Hit Points</label>:
      <%= f.number_field 'maxHP',value: 10, min: 1, max: 20 %>
    </p>


    <p>
      <label for = 'character_armorClass'>Armor Class</label>:
      <%= f.number_field 'maxHP',value: 10, min: 1, max: 20 %>
    </p>

    <p>
      <label for = 'character_strRoll'>Strength Roll</label>:
      <%= f.number_field 'strRoll',value: 10, min: 1, max: 20 %>
    </p>

    <p>
      <label for = 'character_dexRoll'>Dexterity Roll</label>:
      <%= f.number_field 'dexRoll',value: 10, min: 1, max: 20 %>
    </p>

    <p>
      <label for = 'character_conRoll'>Constitution Roll</label>:
      <%= f.number_field 'conRoll',value: 10, min: 1, max: 20 %>
    </p>

    <p>
      <label for = 'character_perRoll'>Perception Roll</label>:
      <%= f.number_field 'perRoll',value: 10, min: 1, max: 20 %>
    </p>

    <p>
      <label for = 'character_intRoll'>Intelligence Roll</label>:
      <%= f.number_field 'intRoll',value: 10, min: 1, max: 20 %>
    </p>

    <p>
      <label for = 'character_wisRoll'>Wisdom Roll</label>:
      <%= f.number_field 'wisRoll',value: 10, min: 1, max: 20 %>
    </p>

    <p>
      <label for = 'character_chrRoll'>Charisma Roll</label>:
      <%= f.number_field 'chrRoll',value: 10, min: 1, max: 20 %>
    </p>

    <p>
      <label for = 'character_stlRoll'>Stealth Roll</label>:
      <%= f.number_field 'stlRoll',value: 10, min: 1, max: 20 %>
    </p>

<%= submit_tag 'Save Changes' %>
<% end %>

<%= link_to 'Back to List', {action: 'index'} %>