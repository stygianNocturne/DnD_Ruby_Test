<h1>Edit a Campaign</h1>

<% if user_signed_in? %>

    <%= form_for @campaign, url: {action: 'update', id: @campaign} do |f|%>
        <p>
          <label for = 'campaign_name'>Edit Campaign Name</label>
          <%= f.text_field 'name', autofocus: true %>
        </p>
        <p>
          <label for = 'campaign_description'>Edit Description</label>
          <%= f.text_area 'description' %>
        </p>
        <%= f.submit 'Save Changes' %>
    <% end %>
<% else %>
  <%= render partial: 'shared/not_logged' %>
<% end %>

<%= link_to 'Back to List', {action: 'index'} %>
