<h1>Customize a Campaign</h1>

<% if user_signed_in? %>

  <%= form_for @campaign, url: campaign_index_path, html: {method: :post} do |f|%>
      <p>
        <label for = 'campaign_name'>Campaign Name</label>
        <%= f.text_field 'name', autofocus: true %>
      </p>
      <p>
        <label for = 'campaign_description'>Description</label>
        <%= f.text_area 'description' %>
      </p>
      <%= f.hidden_field 'user_id', value: current_user.id %>
      <%= f.submit 'Create your Campaign' %>
  <% end %>
<% else %>
    <p>You need to be signed in to access this page. Please sign in <%= link_to 'here', new_user_session_path %>.</p>

<% end %>