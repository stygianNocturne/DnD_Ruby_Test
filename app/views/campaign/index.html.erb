<% if @campaigns.blank? %>
    <p>There are not any campaigns currently in the system.</p>
<% else %>
    <p>These are the current campaigns in our system:</p>

    <ul id="campaigns">
      <% @campaigns.each do |c| %>
          <li>
            <%= link_to c.name, {action: 'show', id: c.id} %>
            <b>
              <%= link_to 'Edit', {action: 'edit', id: c.id} %>
            </b>
            <b>
              <%= link_to 'Delete', c, method: :delete,
                          confirm: 'Are you sure you want to delete this campaign?' %>
            </b>
          </li>
      <% end %>
    </ul>

<% end %>
<p><%= link_to 'Add new Campaign', {action: 'new'} %></p>